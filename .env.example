# Smart Expense Manager - Environment Configuration
# Copy this to .env and fill in your values

PORT=3000
NODE_ENV=production

# PostgreSQL Database (use private IP for instance-based deployment)
DB_HOST=<your-db-private-ip>
DB_PORT=5432
DB_NAME=expense_db
DB_USER=postgres
DB_PASSWORD=your_strong_password_here

# JWT Secret - use a long random string (min 32 chars)
JWT_SECRET=your_very_long_and_random_jwt_secret_key_here_change_this
