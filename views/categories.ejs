<%
const activePage = 'categories';
const title = 'Categories ‚Äì ExpenseIQ';
const incomeCategories = categories.filter(c => c.type === 'income');
const expenseCategories = categories.filter(c => c.type === 'expense');
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
<div class="app-wrapper">
  <%- include('partials/sidebar') %>
  <main class="main-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">Categories</h1>
        <p class="page-subtitle">Organize your income and expense types</p>
      </div>
      <button class="btn btn-primary" onclick="openModal('addCatModal')">+ Add Category</button>
    </div>

    <div id="flashMsg" style="display:none" class="alert"></div>

    <div class="two-col-grid">
      <!-- Income Categories -->
      <div class="card">
        <div class="card-header">
          <h3>Income Categories</h3>
          <span class="badge badge-income"><%= incomeCategories.length %></span>
        </div>
        <div class="card-body">
          <% if (incomeCategories.length === 0) { %>
            <div class="empty-state"><p>No income categories yet</p></div>
          <% } else { %>
            <ul class="cat-list">
              <% incomeCategories.forEach(c => { %>
              <li class="cat-item">
                <div class="cat-info">
                  <span class="cat-dot income"></span>
                  <span class="cat-name"><%= c.name %></span>
                </div>
                <button class="btn-icon danger" onclick="deleteCategory(<%= c.id %>, '<%= c.name %>')" title="Delete">üóëÔ∏è</button>
              </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>

      <!-- Expense Categories -->
      <div class="card">
        <div class="card-header">
          <h3>Expense Categories</h3>
          <span class="badge badge-expense"><%= expenseCategories.length %></span>
        </div>
        <div class="card-body">
          <% if (expenseCategories.length === 0) { %>
            <div class="empty-state"><p>No expense categories yet</p></div>
          <% } else { %>
            <ul class="cat-list">
              <% expenseCategories.forEach(c => { %>
              <li class="cat-item">
                <div class="cat-info">
                  <span class="cat-dot expense"></span>
                  <span class="cat-name"><%= c.name %></span>
                </div>
                <button class="btn-icon danger" onclick="deleteCategory(<%= c.id %>, '<%= c.name %>')" title="Delete">üóëÔ∏è</button>
              </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </main>
</div>

<!-- Add Category Modal -->
<div id="addCatModal" class="modal-overlay" style="display:none">
  <div class="modal">
    <div class="modal-header">
      <h3>Add Category</h3>
      <button class="modal-close" onclick="closeModal('addCatModal')">‚úï</button>
    </div>
    <form method="POST" action="/categories" class="modal-form">
      <div class="form-group">
        <label>Category Name *</label>
        <input type="text" name="name" placeholder="e.g. Groceries, Dividends..." required/>
      </div>
      <div class="form-group">
        <label>Type *</label>
        <div class="radio-group">
          <label class="radio-label">
            <input type="radio" name="type" value="income" required/> Income
          </label>
          <label class="radio-label">
            <input type="radio" name="type" value="expense" required/> Expense
          </label>
        </div>
      </div>
      <div class="modal-actions">
        <button type="button" class="btn btn-outline" onclick="closeModal('addCatModal')">Cancel</button>
        <button type="submit" class="btn btn-primary">Add Category</button>
      </div>
    </form>
  </div>
</div>

<script>
const params = new URLSearchParams(window.location.search);
if (params.get('success')) showFlash(params.get('success'), 'success');
if (params.get('error')) showFlash(params.get('error'), 'error');

function showFlash(msg, type) {
  const el = document.getElementById('flashMsg');
  el.textContent = msg;
  el.className = 'alert alert-' + type;
  el.style.display = 'block';
  setTimeout(() => el.style.display = 'none', 4000);
}

function openModal(id) { document.getElementById(id).style.display = 'flex'; }
function closeModal(id) { document.getElementById(id).style.display = 'none'; }

async function deleteCategory(id, name) {
  if (!confirm(`Delete category "${name}"? This will fail if it has transactions.`)) return;
  try {
    const res = await fetch('/categories/' + id, { method: 'DELETE' });
    const data = await res.json();
    if (data.success) location.reload();
    else alert(data.error || 'Failed to delete');
  } catch(e) { alert('Network error'); }
}

document.querySelectorAll('.modal-overlay').forEach(el => {
  el.addEventListener('click', e => { if (e.target === el) el.style.display = 'none'; });
});
</script>
</body>
</html>
